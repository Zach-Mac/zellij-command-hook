layout {
    cwd "/home/zach/Dev"
    tab name="flake" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane command="nvim" cwd="/home/zach/Dev/mediactl" size="50%" {
                args "flake.nix"
                start_suspended true
            }
            pane size="50%" {
                pane command="codex" cwd="/home/zach/Dev/mediactl" size="40%" {
                    args "--search"
                    start_suspended true
                }
                pane cwd="mediactl" contents_file="initial_contents_1" size="60%"
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="test" hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="vertical" {
            pane command="direnv" cwd="/home/zach/Dev/mediactl" size="50%" {
                args "exec" "." "nvim" "src/tui/message/mod.rs"
                start_suspended true
            }
            pane command="bash" cwd="/home/zach/Dev/mediactl" size="50%" {
                args "-c" "direnv reload && bacon"
                start_suspended true
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="mediactl" hide_floating_panes=true {
